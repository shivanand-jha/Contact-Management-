<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <main>
      <% if (users!=null) { %>
      <table>
        <thead>
          <tr>
            <th>SNO.</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Role</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Comment</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((element , index) => { %>

          <tr>
            <td><%= index+1 %></td>
            <td><%= element.firstName %></td>
            <td><%= element.lastName %></td>
            <td><%= element.role %></td>
            <td><%= element.tel %></td>
            <td><%= element.email %></td>
            <td><%= element.description %></td>
            <td>
              <a class="update" href="/edit/<%= element._id %>">Update</a>
              <a class="delete" href="/delete/<%= element._id %>">Delete</a>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
      <% } else{ %>
      <h1>No Data Found</h1>
      <% } %>

      <h2><a href="/register">+ New Register</a></h2>
    </main>
  </body>
</html>
